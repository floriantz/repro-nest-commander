{
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "module": "commonjs",
    "target": "ES2019",
    "moduleResolution": "node",
    "noEmitOnError": true,

    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist",
    "incremental": true,
    "importHelpers": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}
